@article{Meissner:2006, 
year = {2006}, 
rating = {0}, 
keywords = {Algorithms,Automated,Automated: methods,biological,blood-brain-barrier,blood-brain-barrier-metabolism,blood-proteins,blood-proteins-metabolism,cell-membrane-permeability,cell-membrane-permeability-physiology,Computer Simulation,Humans,Models,neural-networks-computer,pattern recognition}, 
title = {{Optimized Particle Swarm Optimization (OPSO) and its application to artificial neural network training.}}, 
author = {Meissner, Michael and Schmuker, Michael and Schneider, Gisbert}, 
